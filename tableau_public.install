/**
 * Implements hook_field_schema().
 */
function tableau_public_field_schema($field) {
  $columns = array();

  switch($field['type']) {
    case 'tableau_public_info':
      $columns = array(
        'title' => array(
          'type' => 'varchar',
          'length' => '255',
          'not null' => TRUE,
        ),
        'dynamic' => array(
          'type' => 'int',
          'not null' => FALSE,
        ),
        'button_group_classes' => array(
          'type' => 'varchar',
          'length' => '255',
          'not null' => FALSE,
        ),
        'button_classes' => array(
          'type' => 'varchar',
          'length' => '255',
          'not null' => FALSE,
        ),
        'short' => array(
          'type' => 'varchar',
          'length' => '255',
          'not null' => FALSE,
        ),
        'viz' => array(
          'type' => 'varchar',
          'length' => '255',
          'not null' => FALSE,
        ),
      );
      break;
    case 'tableau_public_sheets':
      $columns = array(
        'name' => array(
          'type' => 'varchar',
          'length' => '256',
          'not null' => TRUE,
        ),
        'mobile' => array(
          'type' => 'int',
          'not null' => FALSE,
        ),
      );
      break;
  }
  return array(
    'columns' => $columns,
  );
}
